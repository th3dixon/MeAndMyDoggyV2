@{
    ViewData["Title"] = "Administration Dashboard";
    ViewData["Description"] = "Comprehensive administrative control panel for MeAndMyDoggy platform management";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
}

<div class="admin-container" x-data="adminDashboard()" x-cloak>
    <!-- Admin Sidebar -->
    <div class="admin-sidebar fixed top-0 left-0 h-full" :class="{'collapsed': sidebarCollapsed, 'mobile-open': mobileMenuOpen}">
        <!-- Sidebar Header -->
        <div class="p-6 border-b border-gray-200">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3" x-show="!sidebarCollapsed">
                    <div class="w-10 h-10 bg-gradient-to-r from-blue-600 to-blue-700 rounded-lg flex items-center justify-center">
                        <i class="fas fa-shield-alt text-white text-lg"></i>
                    </div>
                    <div>
                        <h2 class="font-bold text-gray-900">Admin Panel</h2>
                        <p class="text-xs text-gray-500">MeAndMyDoggy</p>
                    </div>
                </div>
                <button @@click="sidebarCollapsed = !sidebarCollapsed" 
                        class="p-2 hover:bg-gray-100 rounded-lg transition-colors">
                    <i class="fas fa-bars text-gray-600"></i>
                </button>
            </div>
        </div>
        
        <!-- Navigation Menu -->
        <nav class="p-4 space-y-2">
            <!-- Dashboard -->
            <div class="admin-nav-item" :class="{'active': activeSection === 'dashboard'}" @@click="setActiveSection('dashboard')">
                <i class="fas fa-tachometer-alt admin-nav-icon"></i>
                <span class="admin-nav-text">Dashboard</span>
            </div>
            
            <!-- User Management -->
            <div class="admin-nav-item" :class="{'active': activeSection === 'users'}" @@click="setActiveSection('users')">
                <i class="fas fa-users admin-nav-icon"></i>
                <span class="admin-nav-text">User Management</span>
                <span class="admin-nav-badge" x-show="pendingUserActions > 0" x-text="pendingUserActions"></span>
            </div>
            
            <!-- System Configuration -->
            <div class="admin-nav-item" :class="{'active': activeSection === 'system'}" @@click="setActiveSection('system')">
                <i class="fas fa-cogs admin-nav-icon"></i>
                <span class="admin-nav-text">System Config</span>
            </div>
            
            <!-- Security Monitoring -->
            <div class="admin-nav-item" :class="{'active': activeSection === 'security'}" @@click="setActiveSection('security')">
                <i class="fas fa-shield-check admin-nav-icon"></i>
                <span class="admin-nav-text">Security</span>
                <span class="admin-nav-badge" x-show="securityAlerts > 0" x-text="securityAlerts"></span>
            </div>
            
            <!-- Content Moderation -->
            <div class="admin-nav-item" :class="{'active': activeSection === 'moderation'}" @@click="setActiveSection('moderation')">
                <i class="fas fa-flag admin-nav-icon"></i>
                <span class="admin-nav-text">Moderation</span>
                <span class="admin-nav-badge" x-show="moderationQueue > 0" x-text="moderationQueue"></span>
            </div>
            
            <!-- Analytics & Reporting -->
            <div class="admin-nav-item" :class="{'active': activeSection === 'analytics'}" @@click="setActiveSection('analytics')">
                <i class="fas fa-chart-line admin-nav-icon"></i>
                <span class="admin-nav-text">Analytics</span>
            </div>
            
            <!-- Financial Oversight -->
            <div class="admin-nav-item" :class="{'active': activeSection === 'financial'}" @@click="setActiveSection('financial')">
                <i class="fas fa-dollar-sign admin-nav-icon"></i>
                <span class="admin-nav-text">Financial</span>
            </div>
            
            <!-- Integration Management -->
            <div class="admin-nav-item" :class="{'active': activeSection === 'integrations'}" @@click="setActiveSection('integrations')">
                <i class="fas fa-plug admin-nav-icon"></i>
                <span class="admin-nav-text">Integrations</span>
            </div>
        </nav>
        
        <!-- Admin User Info -->
        <div class="absolute bottom-0 left-0 right-0 p-4 border-t border-gray-200 bg-gray-50" x-show="!sidebarCollapsed">
            <div class="flex items-center space-x-3">
                <img src="data:image/svg+xml;base64, MTUuNzkgMTYuNDIgMTQgMTIgMTRaIiBmaWxsPSJ3aGl0ZSIvPgo8L3N2Zz4KPC9zdmc+" 
                     class="w-8 h-8 rounded-full">
                <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900 truncate">Admin User</p>
                    <p class="text-xs text-gray-500">Super Administrator</p>
                </div>
                <button class="text-gray-400 hover:text-gray-600 p-1">
                    <i class="fas fa-sign-out-alt"></i>
                </button>
            </div>
        </div>
    </div>
    
    <!-- Main Content Area -->
    <div class="admin-main-content" :class="{'expanded': sidebarCollapsed}">
        <!-- Header -->
        <header class="admin-header">
            <div class="flex items-center space-x-4">
                <!-- Mobile Menu Toggle -->
                <button @@click="mobileMenuOpen = !mobileMenuOpen" class="lg:hidden p-2 hover:bg-gray-100 rounded-lg">
                    <i class="fas fa-bars text-gray-600"></i>
                </button>
                
                <!-- Breadcrumb -->
                <div class="admin-breadcrumb">
                    <span>Administration</span>
                    <i class="fas fa-chevron-right admin-breadcrumb-separator"></i>
                    <span x-text="getSectionTitle(activeSection)" class="font-medium text-gray-900"></span>
                </div>
            </div>
            
            <!-- Header Actions -->
            <div class="flex items-center space-x-4">
                <!-- Search -->
                <div class="relative hidden md:block">
                    <input type="text" placeholder="Search admin..." 
                           class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
                </div>
                
                <!-- Notifications -->
                <div class="relative">
                    <button class="p-2 hover:bg-gray-100 rounded-lg relative">
                        <i class="fas fa-bell text-gray-600"></i>
                        <span class="absolute -top-1 -right-1 w-5 h-5 bg-red-500 text-white text-xs rounded-full flex items-center justify-center" x-show="totalAlerts > 0" x-text="totalAlerts"></span>
                    </button>
                </div>
                
                <!-- Admin Profile -->
                <div class="flex items-center space-x-2">
                    <span class="text-sm font-medium text-gray-700 hidden md:inline">Admin User</span>
                    <img src="data:image/svg+xml;base64," 
                         class="w-8 h-8 rounded-full">
                </div>
            </div>
        </header>
        
        <!-- Content Sections -->
        <main class="p-6">
            <!-- Dashboard Section -->
            <div x-show="activeSection === 'dashboard'" class="fade-in">
                <!-- Dashboard Header -->
                <div class="mb-8">
                    <h1 class="text-3xl font-bold text-gray-900 mb-2">Administration Dashboard</h1>
                    <p class="text-gray-600">Platform overview and key metrics</p>
                </div>
                
                <!-- Key Statistics -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                    <div class="stat-card" style="--stat-color: var(--admin-primary);">
                        <div class="flex items-center justify-between">
                            <div>
                                <div class="stat-number" x-text="dashboardStats.totalUsers"></div>
                                <div class="stat-label">Total Users</div>
                                <div class="stat-change positive">
                                    <i class="fas fa-arrow-up"></i> +12% this month
                                </div>
                            </div>
                            <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-users text-blue-600 text-xl"></i>
                            </div>
                        </div>
                    </div>
                    
                    <div class="stat-card" style="--stat-color: var(--admin-success);">
                        <div class="flex items-center justify-between">
                            <div>
                                <div class="stat-number" x-text="dashboardStats.activeProviders"></div>
                                <div class="stat-label">Active Providers</div>
                                <div class="stat-change positive">
                                    <i class="fas fa-arrow-up"></i> +8% this month
                                </div>
                            </div>
                            <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-briefcase text-green-600 text-xl"></i>
                            </div>
                        </div>
                    </div>
                    
                    <div class="stat-card" style="--stat-color: var(--admin-warning);">
                        <div class="flex items-center justify-between">
                            <div>
                                <div class="stat-number" x-text="dashboardStats.pendingReviews"></div>
                                <div class="stat-label">Pending Reviews</div>
                                <div class="stat-change negative">
                                    <i class="fas fa-arrow-down"></i> -5% this week
                                </div>
                            </div>
                            <div class="w-12 h-12 bg-yellow-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-clock text-yellow-600 text-xl"></i>
                            </div>
                        </div>
                    </div>
                    
                    <div class="stat-card" style="--stat-color: var(--admin-info);">
                        <div class="flex items-center justify-between">
                            <div>
                                <div class="stat-number">Â£<span x-text="dashboardStats.monthlyRevenue"></span></div>
                                <div class="stat-label">Monthly Revenue</div>
                                <div class="stat-change positive">
                                    <i class="fas fa-arrow-up"></i> +15% this month
                                </div>
                            </div>
                            <div class="w-12 h-12 bg-cyan-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-pound-sign text-cyan-600 text-xl"></i>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Dashboard Content Grid -->
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                    <!-- Recent Activity -->
                    <div class="lg:col-span-2 admin-card">
                        <div class="admin-card-header">
                            <h3 class="text-lg font-semibold text-gray-900">Recent System Activity</h3>
                        </div>
                        <div class="admin-card-body">
                            <div class="space-y-4">
                                <template x-for="activity in recentActivity" :key="activity.id">
                                    <div class="flex items-center space-x-4 p-3 hover:bg-gray-50 rounded-lg">
                                        <div class="w-10 h-10 rounded-full flex items-center justify-center" :class="activity.iconBg">
                                            <i :class="activity.icon" class="text-sm"></i>
                                        </div>
                                        <div class="flex-1">
                                            <p class="text-sm font-medium text-gray-900" x-text="activity.title"></p>
                                            <p class="text-xs text-gray-500" x-text="activity.description"></p>
                                            <p class="text-xs text-gray-400" x-text="activity.time"></p>
                                        </div>
                                    </div>
                                </template>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Quick Actions -->
                    <div class="admin-card">
                        <div class="admin-card-header">
                            <h3 class="text-lg font-semibold text-gray-900">Quick Actions</h3>
                        </div>
                        <div class="admin-card-body space-y-3">
                            <button class="admin-btn admin-btn-primary w-full justify-center" @@click="setActiveSection('users')">
                                <i class="fas fa-user-plus"></i>
                                <span>Add New User</span>
                            </button>
                            <button class="admin-btn admin-btn-secondary w-full justify-center" @@click="setActiveSection('moderation')">
                                <i class="fas fa-flag"></i>
                                <span>Review Content</span>
                            </button>
                            <button class="admin-btn admin-btn-success w-full justify-center" @@click="setActiveSection('system')">
                                <i class="fas fa-cogs"></i>
                                <span>System Settings</span>
                            </button>
                            <button class="admin-btn admin-btn-danger w-full justify-center" @@click="setActiveSection('security')">
                                <i class="fas fa-shield-alt"></i>
                                <span>Security Center</span>
                            </button>
                        </div>
                    </div>
                </div>
                
                <!-- System Health Overview -->
                <div class="mt-8 admin-card">
                    <div class="admin-card-header">
                        <h3 class="text-lg font-semibold text-gray-900">System Health Overview</h3>
                    </div>
                    <div class="admin-card-body">
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                            <div class="text-center">
                                <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-green-100 flex items-center justify-center">
                                    <i class="fas fa-server text-green-600 text-2xl"></i>
                                </div>
                                <h4 class="font-semibold text-gray-900">Server Status</h4>
                                <p class="text-sm text-green-600 font-medium">All Systems Operational</p>
                                <div class="mt-2">
                                    <div class="w-full bg-gray-200 rounded-full h-2">
                                        <div class="bg-green-600 h-2 rounded-full" style="width: 98%"></div>
                                    </div>
                                    <p class="text-xs text-gray-500 mt-1">98% Uptime</p>
                                </div>
                            </div>
                            
                            <div class="text-center">
                                <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-yellow-100 flex items-center justify-center">
                                    <i class="fas fa-database text-yellow-600 text-2xl"></i>
                                </div>
                                <h4 class="font-semibold text-gray-900">Database</h4>
                                <p class="text-sm text-yellow-600 font-medium">Moderate Load</p>
                                <div class="mt-2">
                                    <div class="w-full bg-gray-200 rounded-full h-2">
                                        <div class="bg-yellow-600 h-2 rounded-full" style="width: 65%"></div>
                                    </div>
                                    <p class="text-xs text-gray-500 mt-1">65% Capacity</p>
                                </div>
                            </div>
                            
                            <div class="text-center">
                                <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-blue-100 flex items-center justify-center">
                                    <i class="fas fa-cloud text-blue-600 text-2xl"></i>
                                </div>
                                <h4 class="font-semibold text-gray-900">API Response</h4>
                                <p class="text-sm text-blue-600 font-medium">Excellent</p>
                                <div class="mt-2">
                                    <div class="w-full bg-gray-200 rounded-full h-2">
                                        <div class="bg-blue-600 h-2 rounded-full" style="width: 92%"></div>
                                    </div>
                                    <p class="text-xs text-gray-500 mt-1">Average 150ms</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- User Management Section -->
            <div x-show="activeSection === 'users'" class="fade-in">
                <!-- Section Header -->
                <div class="flex items-center justify-between mb-8">
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900 mb-2">User Management</h1>
                        <p class="text-gray-600">Manage user accounts, permissions, and moderation actions</p>
                    </div>
                    <button class="admin-btn admin-btn-primary" @@click="showUserModal = true">
                        <i class="fas fa-user-plus"></i>
                        <span>Add New User</span>
                    </button>
                </div>
                
                <!-- User Management Filters & Search -->
                <div class="admin-card mb-6">
                    <div class="admin-card-body">
                        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                            <div>
                                <label class="admin-form-label">Search Users</label>
                                <div class="relative">
                                    <input type="text" x-model="userFilters.search" placeholder="Name, email, or ID..." 
                                           class="admin-form-input pl-10">
                                    <i class="fas fa-search absolute left-3 top-4 text-gray-400"></i>
                                </div>
                            </div>
                            <div>
                                <label class="admin-form-label">User Type</label>
                                <select x-model="userFilters.type" class="admin-form-input">
                                    <option value="">All Users</option>
                                    <option value="pet_owner">Pet Owners</option>
                                    <option value="service_provider">Service Providers</option>
                                    <option value="admin">Administrators</option>
                                </select>
                            </div>
                            <div>
                                <label class="admin-form-label">Status</label>
                                <select x-model="userFilters.status" class="admin-form-input">
                                    <option value="">All Statuses</option>
                                    <option value="active">Active</option>
                                    <option value="suspended">Suspended</option>
                                    <option value="pending">Pending Verification</option>
                                </select>
                            </div>
                            <div class="flex items-end">
                                <button class="admin-btn admin-btn-secondary w-full">
                                    <i class="fas fa-filter"></i>
                                    <span>Apply Filters</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Users Table -->
                <div class="admin-card">
                    <div class="admin-card-header">
                        <div class="flex items-center justify-between">
                            <h3 class="text-lg font-semibold text-gray-900">User Accounts</h3>
                            <div class="flex items-center space-x-3">
                                <span class="text-sm text-gray-500" x-text="`Showing ${filteredUsers.length} users`"></span>
                                <button class="admin-btn admin-btn-secondary">
                                    <i class="fas fa-download"></i>
                                    <span>Export</span>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="overflow-x-auto">
                        <table class="admin-table">
                            <thead>
                                <tr>
                                    <th>User</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    <th>Joined</th>
                                    <th>Last Active</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <template x-for="user in paginatedUsers" :key="user.id">
                                    <tr>
                                        <td>
                                            <div class="flex items-center space-x-3">
                                                <img :src="user.avatar" class="w-10 h-10 rounded-full">
                                                <div>
                                                    <p class="font-medium text-gray-900" x-text="user.name"></p>
                                                    <p class="text-sm text-gray-500" x-text="user.email"></p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium"
                                                  :class="getUserTypeBadge(user.type)" x-text="user.type"></span>
                                        </td>
                                        <td>
                                            <span class="status-indicator" :class="getUserStatusClass(user.status)">
                                                <div class="w-2 h-2 rounded-full" :class="getUserStatusDot(user.status)"></div>
                                                <span x-text="user.status"></span>
                                            </span>
                                        </td>
                                        <td class="text-sm text-gray-500" x-text="user.joinedDate"></td>
                                        <td class="text-sm text-gray-500" x-text="user.lastActive"></td>
                                        <td>
                                            <div class="flex items-center space-x-2">
                                                <button @@click="viewUser(user)" class="text-blue-600 hover:text-blue-800 p-1">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <button @@click="editUser(user)" class="text-gray-600 hover:text-gray-800 p-1">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button @@click="suspendUser(user)" class="text-red-600 hover:text-red-800 p-1" 
                                                        x-show="user.status !== 'suspended'">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                                <button @@click="reactivateUser(user)" class="text-green-600 hover:text-green-800 p-1" 
                                                        x-show="user.status === 'suspended'">
                                                    <i class="fas fa-check-circle"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                </template>
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Pagination -->
                    <div class="px-6 py-4 border-t border-gray-200">
                        <div class="flex items-center justify-between">
                            <div class="text-sm text-gray-500">
                                Showing <span x-text="((currentPage - 1) * usersPerPage) + 1"></span> to 
                                <span x-text="Math.min(currentPage * usersPerPage, filteredUsers.length)"></span> of 
                                <span x-text="filteredUsers.length"></span> users
                            </div>
                            <div class="flex items-center space-x-2">
                                <button @@click="currentPage = Math.max(1, currentPage - 1)" 
                                        :disabled="currentPage === 1"
                                        class="admin-btn admin-btn-secondary disabled:opacity-50">
                                    <i class="fas fa-chevron-left"></i>
                                </button>
                                <span class="px-3 py-2 text-sm" x-text="`Page ${currentPage} of ${totalPages}`"></span>
                                <button @@click="currentPage = Math.min(totalPages, currentPage + 1)" 
                                        :disabled="currentPage === totalPages"
                                        class="admin-btn admin-btn-secondary disabled:opacity-50">
                                    <i class="fas fa-chevron-right"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- System Configuration Section -->
            <div x-show="activeSection === 'system'" class="fade-in">
                <div class="mb-8">
                    <h1 class="text-3xl font-bold text-gray-900 mb-2">System Configuration</h1>
                    <p class="text-gray-600">Manage platform settings, feature flags, and integrations</p>
                </div>
                
                <!-- Configuration Categories -->
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                    <!-- Configuration Navigation -->
                    <div class="admin-card">
                        <div class="admin-card-header">
                            <h3 class="text-lg font-semibold text-gray-900">Configuration Categories</h3>
                        </div>
                        <div class="admin-card-body p-0">
                            <nav class="space-y-1">
                                <template x-for="category in configCategories" :key="category.id">
                                    <button @@click="activeConfigCategory = category.id" 
                                            :class="activeConfigCategory === category.id ? 'bg-blue-50 text-blue-600 border-r-2 border-blue-600' : 'text-gray-600 hover:bg-gray-50'"
                                            class="w-full text-left px-6 py-3 flex items-center space-x-3 transition-colors">
                                        <i :class="category.icon"></i>
                                        <span x-text="category.name"></span>
                                        <span x-show="category.hasChanges" class="w-2 h-2 bg-orange-500 rounded-full ml-auto"></span>
                                    </button>
                                </template>
                            </nav>
                        </div>
                    </div>
                    
                    <!-- Configuration Content -->
                    <div class="lg:col-span-2 admin-card">
                        <div class="admin-card-header">
                            <div class="flex items-center justify-between">
                                <h3 class="text-lg font-semibold text-gray-900" x-text="getConfigCategoryTitle(activeConfigCategory)"></h3>
                                <button class="admin-btn admin-btn-primary">
                                    <i class="fas fa-save"></i>
                                    <span>Save Changes</span>
                                </button>
                            </div>
                        </div>
                        <div class="admin-card-body">
                            <!-- General Settings -->
                            <div x-show="activeConfigCategory === 'general'" class="space-y-6">
                                <div class="admin-form-group">
                                    <label class="admin-form-label">Platform Name</label>
                                    <input type="text" value="MeAndMyDoggy" class="admin-form-input">
                                </div>
                                <div class="admin-form-group">
                                    <label class="admin-form-label">Support Email</label>
                                    <input type="email" value="support@meandmydoggy.com" class="admin-form-input">
                                </div>
                                <div class="admin-form-group">
                                    <label class="admin-form-label">Maintenance Mode</label>
                                    <div class="flex items-center space-x-3">
                                        <input type="checkbox" id="maintenance" class="w-4 h-4 text-blue-600">
                                        <label for="maintenance" class="text-sm text-gray-700">Enable maintenance mode</label>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Feature Flags -->
                            <div x-show="activeConfigCategory === 'features'" class="space-y-4">
                                <template x-for="flag in featureFlags" :key="flag.id">
                                    <div class="flex items-center justify-between p-4 border border-gray-200 rounded-lg">
                                        <div>
                                            <h4 class="font-medium text-gray-900" x-text="flag.name"></h4>
                                            <p class="text-sm text-gray-500" x-text="flag.description"></p>
                                        </div>
                                        <div class="flex items-center space-x-3">
