@{
    ViewData["Title"] = "Sign In - MeAndMyDoggy";
    ViewData["Description"] = "Sign in to your MeAndMyDoggy account to access your dashboard and manage your pet care services.";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/auth-login.css" asp-append-version="true" />
}

<body class="bg-white font-sans">
<!-- Main Content -->
<div class="min-h-screen pt-16 relative bg-gradient-to-br from-pet-orange/5 to-pet-blue/5 overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 hero-pattern"></div>
    <div class="paw-print top-20 left-10 opacity-20"></div>
    <div class="paw-print top-32 right-20 opacity-20 animation-delay-1"></div>
    <div class="paw-print bottom-20 left-32 opacity-20 animation-delay-2"></div>
    <div class="paw-print top-96 right-40 opacity-20 animation-delay-3"></div>
    <div class="paw-print bottom-32 right-16 opacity-20 animation-delay-4"></div>
    
    <!-- Hero Section -->
    <div class="relative py-12">
        <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <h1 class="text-3xl md:text-4xl font-display font-bold text-gray-900 mb-4">
                    Welcome Back
                </h1>
                <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                    Sign in to your account to continue connecting with trusted pet services
                </p>
            </div>
        </div>
    </div>

    <!-- Login Form -->
    <div class="relative max-w-md mx-auto px-4 sm:px-6 lg:px-8 py-12" x-data="loginForm()">
        <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-8">
            <!-- Social Login Buttons (Future Implementation) -->
            <div class="space-y-3 mb-6">
                <button disabled class="w-full flex items-center justify-center px-4 py-3 border border-gray-300 rounded-xl text-gray-400 font-medium cursor-not-allowed">
                    <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google" class="w-5 h-5 mr-3 opacity-50">
                    Continue with Google (Coming Soon)
                </button>
                
                <button disabled class="w-full flex items-center justify-center px-4 py-3 border border-gray-300 rounded-xl text-gray-400 font-medium cursor-not-allowed">
                    <i class="fab fa-facebook-f text-gray-400 mr-3"></i>
                    Continue with Facebook (Coming Soon)
                </button>
            </div>

            <div class="relative flex items-center my-6">
                <div class="flex-grow border-t border-gray-300"></div>
                <span class="flex-shrink mx-4 text-sm text-gray-600">or sign in with email</span>
                <div class="flex-grow border-t border-gray-300"></div>
            </div>

            <!-- Standard Login Form -->
            <form x-on:submit.prevent="submitLogin">
                <div class="space-y-6">
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            x-model="formData.email"
                            x-on:input="validateField('email')"
                            class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-pet-orange focus:border-transparent" 
                            x-bind:class="errors.email ? 'border-red-500 focus:border-red-500 focus:ring-red-500' : ''"
                            placeholder="Enter your email address"
                            required>
                        <p x-show="errors.email" class="text-red-500 text-sm mt-1" x-text="errors.email"></p>
                    </div>
                    
                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700 mb-2">Password</label>
                        <div class="relative">
                            <input 
                                x-bind:type="showPassword ? 'text' : 'password'" 
                                id="password" 
                                name="password" 
                                x-model="formData.password"
                                x-on:input="validateField('password')"
                                class="w-full px-4 py-3 pr-12 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-pet-orange focus:border-transparent" 
                                x-bind:class="errors.password ? 'border-red-500 focus:border-red-500 focus:ring-red-500' : ''"
                                placeholder="Enter your password"
                                required>
                            <button type="button" x-on:click="showPassword = !showPassword" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-gray-600 transition-colors">
                                <i x-bind:class="showPassword ? 'fas fa-eye-slash' : 'fas fa-eye'"></i>
                            </button>
                        </div>
                        <p x-show="errors.password" class="text-red-500 text-sm mt-1" x-text="errors.password"></p>
                    </div>
                    
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <input type="checkbox" id="remember" name="rememberMe" x-model="formData.rememberMe" class="rounded border-gray-300 text-pet-orange focus:ring-pet-orange">
                            <label for="remember" class="ml-2 text-sm text-gray-700">Remember me</label>
                        </div>
                        <a href="#" class="text-sm text-pet-orange hover:underline">
                            Forgot password?
                        </a>
                    </div>
                    
                    <button 
                        type="submit" 
                        x-bind:disabled="isSubmitting"
                        class="bg-pet-orange text-white w-full py-3 rounded-xl font-medium hover:bg-orange-600 transition-colors disabled:opacity-50 disabled:cursor-not-allowed">
                        <span x-show="!isSubmitting">Sign In</span>
                        <span x-show="isSubmitting">
                            <i class="fas fa-spinner fa-spin mr-2"></i>Signing In...
                        </span>
                    </button>
                </div>
            </form>

            <!-- Sign Up Link -->
            <div class="mt-6 text-center">
                <p class="text-gray-600">
                    Don't have an account? 
                    <a href="/Auth/Register" class="text-pet-orange hover:underline font-medium">Sign up now</a>
                </p>
            </div>
        </div>
    </div>
</div>
</body>

@section Scripts {
    <meta name="return-url" content="@Html.Raw(ViewData["ReturnUrl"] ?? "")" />
    <script src="/js/common/modal.js"></script>
    <script src="/js/pages/login.js"></script>
    <script src="/js/pages/auth-login-init.js"></script>
    <script src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
}