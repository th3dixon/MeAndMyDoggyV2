@{
    ViewData["Title"] = "Pet Health Dashboard";
    ViewData["Description"] = "Manage your pets' medical records, vaccinations, and health reminders";
}

@section Styles {
    <link href="~/css/pages/pet-health.css" rel="stylesheet" />
}

<div class="min-h-screen bg-gradient-to-br from-orange-50 to-blue-50" x-data="petHealthDashboard()" x-cloak>
    <!-- Header -->
    <div class="pt-8 pb-6">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">
                        <i class="fas fa-heartbeat text-red-500 mr-3"></i>
                        Pet Health Dashboard
                    </h1>
                    <p class="text-gray-600 mt-1">Manage medical records, track vaccinations, and monitor health</p>
                </div>
                <div class="flex items-center space-x-3">
                    <button @@click="showAddRecordModal = true" 
                            class="bg-green-600 text-white px-6 py-3 rounded-xl font-medium hover:bg-green-700 transition-colors shadow-lg">
                        <i class="fas fa-plus mr-2"></i>Add Record
                    </button>
                    <button @@click="showHealthSummary = !showHealthSummary" 
                            class="bg-blue-600 text-white px-6 py-3 rounded-xl font-medium hover:bg-blue-700 transition-colors shadow-lg">
                        <i class="fas fa-chart-line mr-2"></i>Summary
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-8">
        <!-- Health Summary Cards -->
        <div x-show="showHealthSummary" x-transition class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-2xl p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
                            <i class="fas fa-syringe text-green-600 text-xl"></i>
                        </div>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Vaccinations</p>
                        <p class="text-2xl font-bold text-gray-900" x-text="healthStats.vaccinationsUpToDate + '/' + healthStats.totalPets"></p>
                        <p class="text-xs text-green-600">Up to date</p>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-2xl p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
                            <i class="fas fa-calendar-check text-blue-600 text-xl"></i>
                        </div>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Checkups</p>
                        <p class="text-2xl font-bold text-gray-900" x-text="healthStats.recentCheckups"></p>
                        <p class="text-xs text-blue-600">Last 6 months</p>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-2xl p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-12 h-12 bg-yellow-100 rounded-full flex items-center justify-center">
                            <i class="fas fa-exclamation-triangle text-yellow-600 text-xl"></i>
                        </div>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Reminders</p>
                        <p class="text-2xl font-bold text-gray-900" x-text="healthReminders.length"></p>
                        <p class="text-xs text-yellow-600">Pending</p>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-2xl p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center">
                            <i class="fas fa-pills text-purple-600 text-xl"></i>
                        </div>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Medications</p>
                        <p class="text-2xl font-bold text-gray-900" x-text="healthStats.activeMedications"></p>
                        <p class="text-xs text-purple-600">Active</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pet Selection & Health Overview -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Pet List & Selection -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-2xl p-6">
                    <h2 class="text-xl font-bold text-gray-900 mb-6">
                        <i class="fas fa-dog text-orange-500 mr-2"></i>Your Pets
                    </h2>
                    
                    <div class="space-y-4">
                        <template x-for="pet in pets" :key="pet.id">
                            <div @@click="selectPet(pet)" 
                                 :class="selectedPet?.id === pet.id ? 'ring-2 ring-blue-500 bg-blue-50' : 'hover:bg-gray-50'"
                                 class="p-4 rounded-xl border cursor-pointer transition-all">
                                <div class="flex items-center">
                                    <img :src="pet.image || '/images/placeholder-dog.jpg'" 
                                         :alt="pet.name" 
                                         class="w-12 h-12 rounded-full object-cover">
                                    <div class="ml-4 flex-1">
                                        <h3 class="font-semibold text-gray-900" x-text="pet.name"></h3>
                                        <p class="text-sm text-gray-500" x-text="pet.breed + ' • ' + pet.age"></p>
                                        <div class="flex items-center mt-1">
                                            <div :class="'w-3 h-3 rounded-full mr-2 ' + getHealthStatusColor(pet.healthStatus)"></div>
                                            <span class="text-xs font-medium" :class="'health-status-' + pet.healthStatus.toLowerCase()" x-text="pet.healthStatus"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </template>
                    </div>
                </div>

                <!-- Health Reminders -->
                <div class="bg-white rounded-2xl p-6 mt-6">
                    <h2 class="text-xl font-bold text-gray-900 mb-6">
                        <i class="fas fa-bell text-yellow-500 mr-2"></i>Health Reminders
                    </h2>
                    
                    <div class="space-y-3" x-show="healthReminders.length > 0">
                        <template x-for="reminder in healthReminders" :key="reminder.id">
                            <div :class="getReminderClass(reminder.priority)" class="p-4 rounded-xl">
                                <div class="flex items-start">
                                    <i :class="reminder.icon + ' text-lg mt-1 mr-3'"></i>
                                    <div class="flex-1">
                                        <h4 class="font-semibold text-gray-900" x-text="reminder.task"></h4>
                                        <p class="text-sm text-gray-600" x-text="reminder.pet"></p>
                                        <p class="text-xs font-medium mt-1" x-text="reminder.due"></p>
                                    </div>
                                </div>
                            </div>
                        </template>
                    </div>
                    
                    <div x-show="healthReminders.length === 0" class="text-center py-8 text-gray-500">
                        <i class="fas fa-check-circle text-green-500 text-3xl mb-3"></i>
                        <p>All health reminders are up to date!</p>
                    </div>
                </div>
            </div>

            <!-- Medical Records & Timeline -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-2xl p-6" x-show="selectedPet">
                    <div class="flex items-center justify-between mb-6">
                        <h2 class="text-xl font-bold text-gray-900">
                            <i class="fas fa-file-medical text-blue-500 mr-2"></i>
                            Medical Records
                            <span x-show="selectedPet" x-text="'- ' + selectedPet?.name" class="text-gray-600 font-normal"></span>
                        </h2>
                        <div class="flex items-center space-x-2">
                            <button @@click="filterRecords = 'all'" 
                                    :class="filterRecords === 'all' ? 'bg-blue-100 text-blue-700' : 'text-gray-600 hover:bg-gray-100'"
                                    class="px-3 py-1 rounded-lg text-sm font-medium transition-colors">All</button>
                            <button @@click="filterRecords = 'vaccination'" 
                                    :class="filterRecords === 'vaccination' ? 'bg-green-100 text-green-700' : 'text-gray-600 hover:bg-gray-100'"
                                    class="px-3 py-1 rounded-lg text-sm font-medium transition-colors">Vaccinations</button>
                            <button @@click="filterRecords = 'checkup'" 
                                    :class="filterRecords === 'checkup' ? 'bg-blue-100 text-blue-700' : 'text-gray-600 hover:bg-gray-100'"
                                    class="px-3 py-1 rounded-lg text-sm font-medium transition-colors">Checkups</button>
                            <button @@click="filterRecords = 'treatment'" 
                                    :class="filterRecords === 'treatment' ? 'bg-red-100 text-red-700' : 'text-gray-600 hover:bg-gray-100'"
                                    class="px-3 py-1 rounded-lg text-sm font-medium transition-colors">Treatments</button>
                        </div>
                    </div>

                    <!-- Medical Records Timeline -->
                    <div class="space-y-4 max-h-96 overflow-y-auto" x-show="filteredMedicalRecords.length > 0">
                        <template x-for="record in filteredMedicalRecords" :key="record.id">
                            <div class="timeline-item relative pl-12 pb-6">
                                <div class="absolute left-3 top-2 w-6 h-6 bg-white rounded-full border-2 flex items-center justify-center"
                                     :class="getRecordIconClass(record.recordType)">
                                    <i :class="getRecordIcon(record.recordType)" class="text-xs"></i>
                                </div>
                                <div :class="'record-type-' + record.recordType.toLowerCase()" 
                                     class="bg-white rounded-xl p-4 shadow-sm border">
                                    <div class="flex items-start justify-between">
                                        <div class="flex-1">
                                            <h4 class="font-semibold text-gray-900" x-text="record.title"></h4>
                                            <p class="text-sm text-gray-600 mt-1" x-text="record.description"></p>
                                            <div class="flex items-center mt-2 text-xs text-gray-500">
                                                <i class="fas fa-calendar mr-1"></i>
                                                <span x-text="formatDate(record.eventDate)"></span>
                                                <span x-show="record.veterinarianName" class="ml-4">
                                                    <i class="fas fa-user-md mr-1"></i>
                                                    <span x-text="record.veterinarianName"></span>
                                                </span>
                                                <span x-show="record.cost" class="ml-4">
                                                    <i class="fas fa-pound-sign mr-1"></i>
                                                    <span x-text="record.cost"></span>
                                                </span>
                                            </div>
                                        </div>
                                        <button @@click="editMedicalRecord(record)" 
                                                class="text-gray-400 hover:text-gray-600 transition-colors">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </template>
                    </div>

                    <div x-show="!selectedPet" class="text-center py-16 text-gray-500">
                        <i class="fas fa-dog text-4xl mb-4 text-gray-300"></i>
                        <p class="text-lg">Select a pet to view medical records</p>
                    </div>

                    <div x-show="selectedPet && filteredMedicalRecords.length === 0" class="text-center py-16 text-gray-500">
                        <i class="fas fa-file-medical text-4xl mb-4 text-gray-300"></i>
                        <p class="text-lg">No medical records yet</p>
                        <button @@click="showAddRecordModal = true" 
                                class="mt-4 bg-blue-600 text-white px-6 py-2 rounded-lg font-medium hover:bg-blue-700 transition-colors">
                            Add First Record
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Medical Record Modal -->
    <div x-show="showAddRecordModal" class="fixed inset-0 z-50 overflow-y-auto" x-cloak>
        <div class="flex items-center justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" @@click="showAddRecordModal = false"></div>
            
            <div class="inline-block align-bottom bg-white rounded-2xl text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                <div class="bg-white px-6 pt-6 pb-4">
                    <div class="flex items-center justify-between mb-6">
                        <h3 class="text-lg font-semibold text-gray-900">
                            <i class="fas fa-plus-circle text-green-500 mr-2"></i>
                            Add Medical Record
                        </h3>
                        <button @@click="showAddRecordModal = false" class="text-gray-400 hover:text-gray-600">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    
                    <form @@submit.prevent="addMedicalRecord()">
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Pet</label>
                                <select x-model="newRecord.dogId" required 
                                        class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                                    <option value="">Select a pet</option>
                                    <template x-for="pet in pets" :key="pet.id">
                                        <option :value="pet.id" x-text="pet.name"></option>
                                    </template>
                                </select>
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Record Type</label>
                                <select x-model="newRecord.recordType" required 
                                        class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                                    <option value="">Select type</option>
                                    <option value="Vaccination">Vaccination</option>
                                    <option value="Checkup">Regular Checkup</option>
                                    <option value="Treatment">Treatment</option>
                                    <option value="Medication">Medication</option>
                                    <option value="Surgery">Surgery</option>
                                    <option value="Emergency">Emergency</option>
                                </select>
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Title</label>
                                <input type="text" x-model="newRecord.title" required 
                                       placeholder="e.g., Annual Vaccination, Dental Checkup"
                                       class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                                <textarea x-model="newRecord.description" rows="3"
                                          placeholder="Detailed description of the medical event"
                                          class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"></textarea>
                            </div>
                            
                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Date</label>
                                    <input type="date" x-model="newRecord.eventDate" required 
                                           class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Cost (£)</label>
                                    <input type="number" x-model="newRecord.cost" step="0.01" min="0"
                                           placeholder="0.00"
                                           class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                                </div>
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Veterinarian</label>
                                <input type="text" x-model="newRecord.veterinarianName"
                                       placeholder="Dr. Smith"
                                       class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Clinic</label>
                                <input type="text" x-model="newRecord.clinicName"
                                       placeholder="Animal Hospital Name"
                                       class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                            </div>
                        </div>
                        
                        <div class="flex justify-end space-x-3 mt-6">
                            <button type="button" @@click="showAddRecordModal = false" 
                                    class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors">
                                Cancel
                            </button>
                            <button type="submit" 
                                    class="px-6 py-2 bg-green-600 text-white rounded-lg font-medium hover:bg-green-700 transition-colors">
                                <i class="fas fa-save mr-2"></i>Add Record
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/pages/pet-health.js"></script>
}
